# Environment Variables for Pipit Safaris

# API Configuration
VITE_API_URL=https://api.pipitsafaris.com/v1

# Application Configuration
VITE_APP_NAME=Pipit Safaris
VITE_APP_VERSION=1.0.0
VITE_SITE_URL=https://www.pipitsafaris.com

# Booking & Payment Configuration
# VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
# VITE_PAYPAL_CLIENT_ID=your_paypal_client_id

# Maps & Location Services
# VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
# VITE_MAPBOX_API_KEY=your_mapbox_api_key

# Weather Services (for safari conditions)
# VITE_WEATHER_API_KEY=your_weather_api_key

# Email Services (for booking confirmations)
# VITE_EMAILJS_SERVICE_ID=your_emailjs_service_id
# VITE_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
# VITE_EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# Social Media Integration
# VITE_FACEBOOK_APP_ID=your_facebook_app_id
# VITE_INSTAGRAM_ACCESS_TOKEN=your_instagram_token

# Analytics & Tracking
# VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# VITE_FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# Development/Production flags
VITE_NODE_ENV=development
VITE_DEBUG=true

# Safari Booking Configuration
VITE_MIN_BOOKING_DAYS=3
VITE_MAX_GROUP_SIZE=12
VITE_BOOKING_ADVANCE_DAYS=30
